<% include ./partials/header %>

<div class="ui main text container">
  <div class="ui huge header"><%= foundBlog.title %></div>
  <div class="ui top attached segment">
    <div class="item">
      <img class="ui centered rounded image" src="<%= foundBlog.image %>" alt="foundblog">
      <div class="content">
        <br>
        <p>Submitted on <strong><%= foundBlog.created.toDateString() %></p></strong>
        <br>
      </div>
      <div class="description">
        <p><%- foundBlog.body %></p>
      </div>
      <a href="/blogs/<%= foundBlog._id %>/edit" class="ui orange basic button">Edit</a>
      <form id="delete" action="/blogs/<%= foundBlog._id %>?_method=DELETE" method="post">
        <button class="ui red basic button">DELETE</button>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>